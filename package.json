{
  "name": "pactwork",
  "version": "0.0.1",
  "description": "Contract-first API simulation framework - Mocks you can trust",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "pactwork": "./bin/pactwork.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "msw",
    "mock",
    "api",
    "openapi",
    "swagger",
    "contract",
    "testing",
    "mock-service-worker"
  ],
  "author": "adrozdenko",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adrozdenko/pactwork.git"
  },
  "bugs": {
    "url": "https://github.com/adrozdenko/pactwork/issues"
  },
  "homepage": "https://github.com/adrozdenko/pactwork#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "ajv": "^8.17.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "diff": "^5.2.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.5",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@types/diff": "^5.2.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.17.12",
    "eslint": "^8.57.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "msw": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "msw": {
      "optional": true
    }
  }
}
